[Unit]
After=multi-user.target

[Service]
WorkingDirectory=/home/pi/scripts/vk_modules
User=pi
Type=simple
ExecStart=bash /home/pi/scripts/vk_modules/service/starter.sh
# ExecStart=/usr/bin/python3 -u /home/pi/scripts/vk_modules/app.py
RemainAfterExit=yes
TimeoutStartSec=0
Restart=always
RestartSec=3s

[Install]
WantedBy=multi-user.target